#!/bin/sh
# postinst script for scpf
#
# see: dh_installdeb(1)

set -e

# create scpf group
if ! getent group scpf >/dev/null; then
        addgroup --system scpf 
fi

# create scpf user
if ! getent passwd scpf >/dev/null; then
        adduser --ingroup scpf --home /var/lib/scpf --disabled-password \
		--system --shell /bin/bash --no-create-home \
		--gecos "scpf Provider" scpf
fi

chown -R scpf:scpf /var/lib/scpf
chown -R scpf:scpf /var/run/scpf
chown -R scpf:scpf /var/log/scpf
chown -R scpf:scpf /etc/scpf/certs
chmod 0755 /var/run/scpf /etc/scpf 
chmod 0755 /etc/scpf/certs 

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

